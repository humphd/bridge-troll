{
  "name": "bridge-troll",
  "version": "1.0.0",
  "description": "A friendly troll that living under Ontario's bridges",
  "scripts": {
    "generate-bridge-json": "node tools/csv2json.js",
    "build": "webpack --mode production",
    "eslint": "eslint --fix tools src test",
    "prettier": "prettier --single-quote --write \"{tools,src,test}/**/*.{js,css}\"",
    "check-prettier": "prettier --single-quote --list-different \"{tools,src,test}/**/*.{js,css}\"",
    "coverage": "opn coverage/index.html",
    "lint": "npm run eslint && npm run check-prettier",
    "test": "npm run lint && npm run karma-headless",
    "start": "webpack-dev-server --mode development --open",
    "debug": "webpack-dev-server --mode development --define process.env.DEBUG=1 --open",
    "karma-headless": "karma start karma.conf.js --browsers ChromeHeadless",
    "karma-firefox": "karma start karma.conf.js --browsers Firefox",
    "karma-chrome": "karma start karma.conf.js --browsers Chrome",
    "karma-edge": "karma start karma.conf.js --browsers Edge"
  },
  "author": "humphd",
  "license": "MIT",
  "devDependencies": {
    "JSONStream": "^1.3.2",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.6.1",
    "chai": "^4.1.2",
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "^0.28.10",
    "csv": "^2.0.0",
    "eslint": "^4.18.2",
    "eslint-plugin-chai-assert-bdd": "0.0.3",
    "eslint-plugin-mocha": "^4.12.1",
    "file-loader": "^1.1.11",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.0.6",
    "istanbul-instrumenter-loader": "^3.0.0",
    "karma": "^2.0.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.1",
    "karma-coverage-istanbul-reporter": "^1.4.2",
    "karma-edge-launcher": "^0.4.2",
    "karma-firefox-launcher": "^1.1.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-webpack": "^2.0.13",
    "mocha": "^5.0.4",
    "opn-cli": "^3.1.0",
    "prettier": "^1.11.1",
    "style-loader": "^0.20.3",
    "url-loader": "^1.0.1",
    "webpack": "^4.1.1",
    "webpack-cli": "^2.0.12",
    "webpack-dev-server": "^3.1.1"
  },
  "dependencies": {
    "geo-tree": "^1.0.5",
    "idb-keyval": "^2.4.2",
    "leaflet": "^1.3.1",
    "loglevel": "^1.6.1",
    "query-string": "^6.0.0"
  }
}
